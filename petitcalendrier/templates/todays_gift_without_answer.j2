                    {% for error in form.answer_character.errors %}
                        <span>{{ error }}</span>
                    {% endfor %}
                </div>
            {% else %}
            <div class="input-group">
                <select class="form-control form-control-lg border-primary w-100" name="{{ form.answer_character.name }}">
                    <option value="" {% if not form.answer_character.data %}selected{% endif %} disabled selected>S√©lectionne un pr√©nom</option>
                    {% for value, label in form.answer_character.choices %}
                        <option value="{{ value }}" {% if form.answer_character.data == value %}selected{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
            {% endif %}
        </div>

        
