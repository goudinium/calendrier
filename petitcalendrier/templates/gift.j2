{% extends "layout.j2" %}
{% block content %}
    <div class="content-section d-flex align-items-center justify-content-center">
    <img src="{{challenge}}" />

    <form class="col-lg-6 offset-lg-3" method="POST" >
        <div class="row justify-content-center">
            {{ form.hidden_tag() }}
            <div class="form-group">
                {{ form.answer.label(class="form-control-label") }}
                {% if form.answer.errors %}
                {{ form.answer(class="form-control form-control is-invalid") }}
                <div class="invalid-feedback">
                    {% for error in form.answer.errors %}
                        <span>{{ error }}</span>
                    {% endfor %}
                </div>
                {% else %}
                {{ form.answer(class="form-control form-control-lg") }}
                {% endif %}
            </div>
            <div class="form-group">
            {{ form.submit(class="btn btn-light") }}
            </div>
            
        </div>
    </form>
    </div>
{% endblock content %}