{% extends "layout.j2" %}
{% block content %}
<div class="row text-center">
    <h1>Réponses de {{user.username}}</h1>
</div>
<div class="container content-section d-flex align-items-center justify-content-center">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Jour</th>
      <th scope="col">Réponse</th>
      <th scope="col">Période</th>
      <th scope="col">Objet</th>
      <th scope="col">Bruit</th>
      <th scope="col">Lieu</th>
      <th scope="col">Couleur</th>
    </tr>
  </thead>
  <tbody>
    {% for answer in answers %}
      <tr>
        <th scope="row">{{answer.question_id}}</th>
        <td>{{answer.answer_character}}</th>
        <td>{{answer.answer_time}}</th>
        <td>{{answer.answer_object}}</th>
        <td>{{answer.answer_sound}}</th>
        <td>{{answer.answer_place}}</th>
        <td>{{answer.answer_color}}</th>
      </tr>
    {% endfor %}
  </tbody>
  </table>
</div>

{% endblock content %}