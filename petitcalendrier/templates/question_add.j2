{% extends "layout.j2" %}
{% block content %}
    <div class="content-section d-flex align-items-center justify-content-center">
        <form method="POST" enctype="multipart/form-data">
            {{ form.hidden_tag() }}
            <fieldset class="form-group">
                <legend class="border-bottom mb-4">{{ title }}</legend>
                <div class="form-group">
                    {{ form.day.label(class="form-control-label") }}

                    {% if form.day.errors %}

                    {{ form.day(class="form-control form-control-lg is-invalid") }}
                    <div class="invalid-feedbacl">
                        {% for error in form.day.errors %}
                            <span>{{ error }}</span>
                        {% endfor %}
                    </div>

                    {% else %}
                    
                    {{ form.day(class="form-control form-control-lg") }}
                    
                    {% endif %}

                </div>
                <div class="form-group">
                    {{ form.answer.label(class="form-control-label") }}

                    {% if form.answer.errors %}

                    {{ form.answer(class="form-control form-control-lg is-invalid") }}
                    <div class="invalid-feedbacl">
                        {% for error in form.answer.errors %}
                            <span>{{ error }}</span>
                        {% endfor %}
                    </div>

                    {% else %}
                    
                    {{ form.answer() }}
                    
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form.picture.label(class="form-control-label") }}

                    {% if form.picture.errors %}

                    {{ form.picture(class="form-control form-control-lg is-invalid") }}
                    <div class="invalid-feedbacl">
                        {% for error in form.picture.errors %}
                            <span>{{ error }}</span>
                        {% endfor %}
                    </div>
                    {% else %}
                    {{ form.picture(class="form-control form-control-lg") }}
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form.submit(class="btn btn-outline-info") }}
                </div>
            </fieldset>
        </form>
    </div>
{% endblock content %}