<body style="background-color: #f4e9db;">
{% extends "layout.j2" %}
{% block content %}
<div class="container py-5">
  <h1 class="text-center mb-5"> Les scores üèÜ</h1>
    <div class="row justify-content-center mb-4">
        <h3 class="text-center" style="color: #708b7e;">
            Ton score : <span class="badge p-2 fs-4" style="background-color: #82c7f9; color: #ebcd6d;">{{ current_user.score }}</span>
        </h3>
    </div>
    <div class="row justify-content-center">
        <h1 class="text-center mb-4" style="color: #ebcd6d;">Classement G√©n√©ral</h1>

        <!-- Podium for top 3 players -->
        <div class="col-12 col-md-10 col-lg-8 d-flex justify-content-around mb-5">
            {% if users|length > 1 %}
                <!-- 2nd Place - Left -->
                {% if users|length >= 2 %}
                    <div class="card shadow-sm p-3 text-center" style="width: 30%; height: 200px; border: 3px solid #82c7f9;">
                        <h2>ü•à 2√®me place</h2>
                        <p style="color: #708b7e;">{{ users[1].username }} - 
                            <span class="badge fs-5" style="background-color: #d35137; color: #ebcd6d;">
                                {{ users[1].score }} points
                            </span>
                        </p>
                    </div>
                {% endif %}

                <!-- 1st Place - Center -->
                <div class="card shadow-sm p-4 text-center" style="width: 35%; height: 250px; border: 3px solid #d35137;">
                    <h1 class="display-4">ü•á 1√®re place</h1>
                    <p style="color: #708b7e;">{{ users[0].username }} - 
                        <span class="badge fs-3" style="background-color: #82c7f9; color: #ebcd6d;">
                            {{ users[0].score }} points
                        </span>
                    </p>
                </div>

                <!-- 3rd Place - Right -->
                {% if users|length >= 3 %}
                    <div class="card shadow-sm p-3 text-center" style="width: 30%; height: 180px; border: 3px solid #708b7e;">
                        <h2>ü•â 3√®me place</h2>
                        <p style="color: #708b7e;">{{ users[2].username }} - 
                            <span class="badge fs-5" style="background-color: #d35137; color: #ebcd6d;">
                                {{ users[2].score }} points
                            </span>
                        </p>
                    </div>
                {% endif %}
            {% endif %}
        </div>

        <!-- Remaining places -->
        <div class="row justify-content-center">
            {% for user in users[3:] %}
                <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <div class="card shadow-sm p-3 text-center" style="border: 2px solid #ebcd6d;">
                        <h3>{{ loop.index + 3 }}√®me place</h3>
                        <p style="color: #708b7e;">{{ user.username }} - 
                            <span class="badge" style="background-color: #d35137; color: #ebcd6d;">
                                {{ user.score }} points
                            </span>
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
</body>
