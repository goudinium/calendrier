{% extends "layout.j2" %}
{% block content %}
    <div class="login d-flex align-items-center justify-content-center">
    <form class="col-lg-6 offset-lg-3" method="POST" >
        <div class="row justify-content-center">
            {{ form.hidden_tag() }}
            <div class="form-group">
                {{ form.username.label(class="form-control-label badge text-bg-primary text-wrap") }}
                {% if form.username.errors %}
                {{ form.username(class="form-control form-control is-invalid") }}
                <div class="invalid-feedback">
                    {% for error in form.username.errors %}
                        <span>{{ error }}</span>
                    {% endfor %}
                </div>
                {% else %}
                {{ form.username(class="form-control form-control") }}
                {% endif %}
            </div>
            <div class="form-group">
                {{ form.password.label(class="form-control-label badge text-bg-primary text-wrap") }}
                {% if form.password.errors %}
                {{ form.password(class="form-control form-control is-invalid") }}
                <div class="invalid-feedback">
                    {% for error in form.password.errors %}
                        <span>{{ error }}</span>
                    {% endfor %}
                </div>
                {% else %}
                {{ form.password(class="form-control form-control") }}
                {% endif %}
            </div>
            <div class="form-group">
                {{ form.remember(class="form-check-input") }}
                {{ form.remember.label(class="form-check-label badge text-bg-primary text-wrap") }}
            </div>
            <div class="form-group">
            {{ form.submit(class="btn btn-light") }}
            </div>
            
        </div>
    </form>
    </div>
{% endblock content %}